<p id="notice"><%= notice %></p>

<h1>Farms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>Parish</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.name %></td>
        <td><%= farm.description %></td>
        <td><%= farm.address_line_1 %></td>
        <td><%= farm.address_line_2 %></td>
        <td><%= farm.parish %></td>
        <td><%= farm.image %></td>
        <td><%= farm.user_id %></td>
        <td><%= link_to 'Show', farm %></td>
        <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
        <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

