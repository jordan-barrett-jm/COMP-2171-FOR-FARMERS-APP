<section class="pt-3 pb-3 mt-0 align-items-end d-flex homepage-hero" style="min-height:45vh; background-position: center center; background-size: cover; background-image: url(<%= image_path('banner2.jpg') %>);">
  <div class="bg-overlay position-absolute"></div>
  <div class="container " style="">
    <div class="row mt-auto">
      <div class="col-lg-8 col-sm-12 ">
        <div class="text-center text-lg-left">
          <h1 class="text-white font-weight-bold text-shadow">Buy the best crops on the Island!</h1>
        </div>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-9">
        <div class="card mt-5 border-light shadow">
          <div class="card-body pb-2 pt-3">
            <%= simple_form_for(:search, url: root_path, method: "GET") do |f| %>
              <div class="form-row">
                <%= f.input :name, 
                            :wrapper_html => { class: "col-md-10 col-sm-12" },
                            :input_html => { class: "form-control border-0" },
                            :placeholder => "What are you searching for?",
                            :label => false %>


                <div class="col-md-2 col-sm-12">
                  <%= f.submit "Search", class: "btn btn-primary shadow col-md-12" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


